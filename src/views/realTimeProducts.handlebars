<section class="container product-manager">
  <div class="card">
     <h1 class="text-center"><strong>Agregar nuevo Producto</strong></h1>
      <p class="text-center">Ingresa los datos del nuevo producto</p>
    <form class="form-product" id="form-product" method="POST" action="/api/products" enctype="multipart/form-data">
      <div class="form-flex">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" required id="title" name="title" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
        <div class="form-group">
          <label for="code">Code</label>
          <input type="text" class="form-control" required id="code" name="code" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
      </div>
      <div class="form-flex">
        <div class="form-group">
          <label for="stock">Stock</label>
          <input type="text" class="form-control" required id="stock" name="stock" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="text" class="form-control" required id="price" name="price" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
      </div>
      <div class="form-group">
        <label for="category">Cetegory</label>
        <input type="text" class="form-control" required id="category" name="category" />
        <div class="validation__message">Este campo es obligatorio</div>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" required class="form-control" id="description" name="description"></textarea>
        <div class="validation__message">Este campo es obligatorio</div>
      </div>
      <div class="form-group">
        <label for="file">Imagen</label>
        <input type="file" required accept="image/*" class="form-control" id="file" name="file" />
        <div class="validation__message">Este campo es obligatorio</div>
      </div>
      <div class="form-group">
        <button type="button" id="button-save" class="btn btn-primary form-product__submit">Agregar Producto</button>
      </div>
    </form>
  </div>
<div class="card">
    <h3><strong>products</strong></h3>
    <div class="table-product">
      <table class="table" id="table-products">
        <thead>
          <tr>
            <th scope="col">Producto</th>
            <th scope="col">Categoria</th>
            <th scope="col">Precio</th>
            <th scope="col">Estado</th>
            <th scope="col">Accion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="5" class="text-center">
              <i class="bx bx-loader bx-spin bx-flip-horizontal bx-sm"></i>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
</div>
</section>
