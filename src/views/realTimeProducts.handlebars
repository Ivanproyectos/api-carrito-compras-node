<section class="container">
  <div class="card">
    <form class="form-product" method="POST" action="/api/products" enctype="multipart/form-data">
      <h1><strong>add product</strong></h1>
      <p>Ingresa los datos del nuevo producto</p>
      <div class="form-flex">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" required id="title" name="title" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
        <div class="form-group">
          <label for="code">Code</label>
          <input type="text" class="form-control" required id="code" name="code" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
      </div>
      <div class="form-flex">
        <div class="form-group">
          <label for="stock">Stock</label>
          <input type="text" class="form-control" required id="stock" name="stock" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="text" class="form-control" required id="price" name="price" />
          <div class="validation__message">Este campo es obligatorio</div>
        </div>
      </div>
      <div class="form-group">
        <label for="category">Cetegory</label>
        <input type="text" class="form-control" required id="category" name="category" />
        <div class="validation__message">Este campo es obligatorio</div>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" class="form-control" id="description" name="description"></textarea>
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-primary form-product__submit">Agregar Producto</button>
      </div>
    </form>
  </div>
</section>
<section class="container">
  <div class="card">
    <h3><strong>products</strong></h3>
    <div class="table-product">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="table-product__info">
                <img src="/assets/img/naranja.jpg" class="table-product__img" />
                <div class="table-product__name">
                  <p>Naranja</p>
                  <small class="table-product__code">code: 123456</small>
                </div>
              </div>
            </td>
            <td>Verduras</td>
            <td>15.00</td>
            <td>
              <span class="badge badge-success">Active</span>
            </td>
            <td>
              <button class="btn btn-outline-danger"><i class="bx bx-trash"></i></button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>